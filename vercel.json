{
  "buildCommand": "corepack enable && pnpm run build",
  "outputDirectory": "./build",
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.portal.pokt.ia"
        }
      ],
      "destination": "https://portal.pokt.ia/:path*",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow, googlebot: noindex, googlebot: nofollow"
        }
      ]
    }
  ]
}
